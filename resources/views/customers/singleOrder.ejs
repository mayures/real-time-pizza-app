<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="font-bold text-xl">Track Delivery Status</h1>
                <h6 class="bg-white text-green-600 py-1 px-4 rounded-full text-xs">
                    <%= order._id %>
                </h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-xl pb-16 " data-status="order-placed"><span>Order Placed</span></li>
                <li class="status_line text-xl pb-16 " data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line text-xl pb-16 " data-status="prepared"><span>Preparation</span></li>
                <li class="status_line text-xl pb-16 " data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status_line text-xl " data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>